<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:outlineSpotShadowColor="@color/background"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نام کاربر : "
                android:fontFamily="@font/iransans"
                android:textSize="14dp"
                android:textColor="@color/textLight"/>

            <TextView
                android:id="@+id/txt_itemRVUserList_UsreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="محمد خواستار"
                android:fontFamily="@font/iransans"
                android:textSize="14dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تلفن : "
                android:fontFamily="@font/iransans"
                android:textSize="14dp"
                android:textColor="@color/textLight"/>

            <TextView
                android:id="@+id/txt_itemRVUserList_PhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09362772410"
                android:fontFamily="@font/irsansfanum"
                android:textSize="14dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="آدرس : "
                android:fontFamily="@font/iransans"
                android:textSize="14dp"
                android:textColor="@color/textLight"/>

            <TextView
                android:id="@+id/txt_itemRVUserList_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="قم،آزادگان،خیابان نواب،کوچه 16"
                android:fontFamily="@font/irsansfanum"
                android:textSize="14dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تعداد درخواست ها : "
                android:fontFamily="@font/iransans"
                android:textSize="14dp"
                android:textColor="@color/textLight"/>

            <TextView
                android:id="@+id/txt_itemRVUserList_NoRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="48"
                android:fontFamily="@font/irsansfanum"
                android:textSize="14dp"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>